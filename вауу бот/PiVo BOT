import telebot
import webbrowser
from telebot import types 

bot = telebot.TeleBot('7273657237:AAGeVKsoo22igzDSUj_xE3Ulo8UKbQB6yFA')

@bot.message_handler(commands=['start'])
def start(message):
    markup = types.InlineKeyboardMarkup()
    markup.add(types.KeyboardButton('на сайт'))
    markup.add(types.KeyboardButton('удалить фото'))
    markup.add(types.KeyboardButton('изменить текст'))
    bot.send_message(message.chat.id, 'привет', reply_markup=markup)
    bot.regester_next_step_handler(message, on_click)

def on_click(message):
    if message.text == 'на сайт':
        webbrowser.open('https://www.chess.com/home')
        bot.send_message(message.chat.id, 'Website is open')
    elif message.text == 'удалить фото':
        bot.send_message(message.chat.id, 'Deleted')

@bot.message_handler(content_types=['photo'])
def get_photo(message):
    markup = types.InlineKeyboardMarkup()
    markup.add(types.InlineKeyboardButton('на сайт', url='https://www.chess.com/home'))
    markup.add(types.InlineKeyboardButton('удалить фото', callback_data='delete'))
    markup.add(types.InlineKeyboardButton('изменить текст', callback_data='edit'))
    bot.reply_to(message, 'вауу', reply_markup=markup)

@bot.callback_query_handler(func=lambda callback: True)
def callback_message(callback):
    if callback.data == 'delete':
        bot.delete_message(callback.message.chat.id, callback.message.message_id-1)
    elif callback.data == 'edit':
        bot.edit_message_text('Edit text', callback.message.chat.id, callback.message.message_id)

bot.polling(none_stop=True)